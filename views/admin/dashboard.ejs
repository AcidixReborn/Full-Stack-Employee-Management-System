<%- include('../partials/header', { title: title }) %>

<div class="container py-4">
  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Welcome, Admin!</h2>
        <a href="/admin/logout" class="btn btn-outline-secondary btn-sm">Logout</a>
      </div>

      <div class="mb-3">
        <h5>Total Employees: <%= totalEmployees %></h5>
        <a href="/admin/employee/add" class="btn btn-success btn-sm">+ Add Employee</a>
      </div>
    </div>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <h5 class="card-title mb-4">Recent Employees</h5>

      <div class="row">
        <% recentEmployees.forEach(function(emp) { %>
          <div class="col-md-3 mb-4">
            <div class="card h-100">
              <div class="card-body">
                <h6 class="card-title fw-bold"><%= emp.name %></h6>
                <p class="card-text small mb-1">
                  <strong>Designation:</strong> <%= emp.designation %>
                </p>
                <p class="card-text small mb-1">
                  <strong>Email:</strong> <%= emp.email %>
                </p>
                <p class="card-text small mb-1">
                  <strong>Contact:</strong> <%= emp.contact %>
                </p>
                <p class="card-text small mb-1">
                  <strong>Department:</strong> <%= emp.department %>
                </p>
                <p class="card-text small mb-1">
                  <strong>Joining Date:</strong> <%= emp.joiningDate %>
                </p>
                <p class="card-text small mb-2">
                  <strong>Location:</strong> <%= emp.location %>
                </p>

                <div class="d-flex gap-2">
                  <form action="/admin/employee/delete/<%= emp.id %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this employee?');">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                  </form>
                  <a href="/admin/employee/edit/<%= emp.id %>" class="btn btn-primary btn-sm">Edit</a>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>

  <div class="card shadow-sm mt-4">
    <div class="card-body">
      <h5 class="card-title mb-4">All Employees</h5>

      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="table-light">
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Designation</th>
              <th>Email</th>
              <th>Contact</th>
              <th>Department</th>
              <th>Joining Date</th>
              <th>Location</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% employees.forEach(function(emp) { %>
              <tr>
                <td><%= emp.id %></td>
                <td><%= emp.name %></td>
                <td><%= emp.designation %></td>
                <td><%= emp.email %></td>
                <td><%= emp.contact %></td>
                <td><%= emp.department %></td>
                <td><%= emp.joiningDate %></td>
                <td><%= emp.location %></td>
                <td>
                  <div class="d-flex gap-1">
                    <form action="/admin/employee/delete/<%= emp.id %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure?');">
                      <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                    <a href="/admin/employee/edit/<%= emp.id %>" class="btn btn-primary btn-sm">Edit</a>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
