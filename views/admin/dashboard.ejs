<%- include('../partials/header', { title: title }) %>

<!-- Navigation -->
<nav class="navbar navbar-expand-lg navbar-custom">
  <div class="container">
    <a class="navbar-brand" href="/admin/dashboard">
      <i class="bi bi-building me-2"></i>EMS Admin
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a class="nav-link active" href="/admin/dashboard">
            <i class="bi bi-speedometer2 me-1"></i>Dashboard
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/admin/employee/add">
            <i class="bi bi-person-plus me-1"></i>Add Employee
          </a>
        </li>
      </ul>
      <a href="/admin/logout" class="btn btn-outline-light btn-sm">
        <i class="bi bi-box-arrow-right me-1"></i>Logout
      </a>
    </div>
  </div>
</nav>

<!-- Main Content -->
<div class="container py-4">
  <!-- Welcome Header -->
  <div class="welcome-header d-flex justify-content-between align-items-center flex-wrap">
    <div>
      <h2><i class="bi bi-hand-wave me-2"></i>Welcome, Admin!</h2>
      <p class="mb-0">Manage your employee directory from here</p>
    </div>
    <div class="d-flex gap-3 align-items-center mt-3 mt-md-0">
      <div class="stat-card" style="background: rgba(255,255,255,0.15); border: none; min-width: 120px;">
        <div class="stat-number" style="color: white;"><%= totalEmployees %></div>
        <div class="stat-label" style="color: rgba(255,255,255,0.8);">Total Employees</div>
      </div>
      <a href="/admin/employee/add" class="btn btn-light btn-lg">
        <i class="bi bi-plus-lg me-1"></i>Add Employee
      </a>
    </div>
  </div>

  <!-- Recent Employees -->
  <div class="card mb-4">
    <div class="card-body">
      <div class="section-header">
        <h5 class="section-title">
          <i class="bi bi-clock-history me-2 text-primary"></i>Recent Employees
        </h5>
      </div>

      <% if (recentEmployees.length === 0) { %>
        <div class="text-center text-muted py-4">
          <i class="bi bi-inbox" style="font-size: 3rem;"></i>
          <p class="mt-2 mb-0">No employees yet. Add your first employee!</p>
        </div>
      <% } else { %>
        <div class="row">
          <% recentEmployees.forEach(function(emp) { %>
            <div class="col-md-6 col-lg-3 mb-4">
              <div class="card employee-card h-100">
                <div class="card-body">
                  <div class="d-flex align-items-center mb-3">
                    <div class="employee-avatar employee-avatar-lg me-3">
                      <i class="bi bi-person-fill"></i>
                    </div>
                    <div>
                      <h6 class="card-title mb-0"><%= emp.name %></h6>
                      <small class="text-muted"><%= emp.designation %></small>
                    </div>
                  </div>

                  <div class="small">
                    <p class="mb-1">
                      <i class="bi bi-envelope me-2 text-muted"></i><%= emp.email %>
                    </p>
                    <p class="mb-1">
                      <i class="bi bi-telephone me-2 text-muted"></i><%= emp.contact %>
                    </p>
                    <p class="mb-1">
                      <i class="bi bi-building me-2 text-muted"></i><%= emp.department %>
                    </p>
                    <p class="mb-1">
                      <i class="bi bi-geo-alt me-2 text-muted"></i><%= emp.location %>
                    </p>
                    <p class="mb-0">
                      <i class="bi bi-calendar me-2 text-muted"></i><%= emp.joiningDate %>
                    </p>
                  </div>

                  <div class="d-flex gap-2 mt-3 pt-3 border-top">
                    <a href="/admin/employee/edit/<%= emp.id %>" class="btn btn-outline-primary btn-sm flex-grow-1">
                      <i class="bi bi-pencil"></i> Edit
                    </a>
                    <form action="/admin/employee/delete/<%= emp.id %>" method="POST" class="d-inline flex-grow-1" onsubmit="return confirm('Are you sure you want to delete this employee?');">
                      <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                        <i class="bi bi-trash"></i> Delete
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>
  </div>

  <!-- All Employees Table -->
  <div class="card">
    <div class="card-body">
      <div class="section-header">
        <h5 class="section-title">
          <i class="bi bi-people me-2 text-primary"></i>All Employees
        </h5>
        <span class="badge bg-primary"><%= employees.length %> records</span>
      </div>

      <% if (employees.length === 0) { %>
        <div class="text-center text-muted py-5">
          <i class="bi bi-person-x" style="font-size: 4rem;"></i>
          <h5 class="mt-3">No Employees Found</h5>
          <p class="mb-3">Start building your team by adding the first employee.</p>
          <a href="/admin/employee/add" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i>Add Employee
          </a>
        </div>
      <% } else { %>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Designation</th>
                <th>Email</th>
                <th>Contact</th>
                <th>Department</th>
                <th>Joining Date</th>
                <th>Location</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% employees.forEach(function(emp) { %>
                <tr>
                  <td><span class="badge bg-light text-dark"><%= emp.id %></span></td>
                  <td class="fw-semibold"><%= emp.name %></td>
                  <td><%= emp.designation %></td>
                  <td><%= emp.email %></td>
                  <td><%= emp.contact %></td>
                  <td><span class="badge badge-department"><%= emp.department %></span></td>
                  <td><%= emp.joiningDate %></td>
                  <td><%= emp.location %></td>
                  <td>
                    <div class="d-flex gap-1">
                      <a href="/admin/employee/edit/<%= emp.id %>" class="btn btn-primary btn-sm" title="Edit">
                        <i class="bi bi-pencil"></i>
                      </a>
                      <form action="/admin/employee/delete/<%= emp.id %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure?');">
                        <button type="submit" class="btn btn-danger btn-sm" title="Delete">
                          <i class="bi bi-trash"></i>
                        </button>
                      </form>
                    </div>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
