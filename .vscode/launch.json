{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/app.js",
      "restart": true,
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Debug Cypress (Chrome)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/cypress",
      "args": ["open", "--browser", "chrome"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "DEBUG": "cypress:*"
      }
    },
    {
      "name": "Debug Cypress (Edge)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/cypress",
      "args": ["open", "--browser", "edge"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "DEBUG": "cypress:*"
      }
    },
    {
      "name": "Debug Cypress Headless",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/cypress",
      "args": ["run"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "DEBUG": "cypress:*"
      }
    }
  ],
  "compounds": [
    {
      "name": "Server + Cypress",
      "configurations": ["Debug Server", "Debug Cypress (Chrome)"],
      "stopAll": true
    }
  ]
}
